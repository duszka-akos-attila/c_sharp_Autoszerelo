<Application x:Class="MechanicClient.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MechanicClient"
             xmlns:viewmodels="clr-namespace:MechanicClient.ViewModels"
             xmlns:views="clr-namespace:MechanicClient.Views"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodels:AvailableJobsViewModel}">
            <views:AvailableJobs/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:JobViewModel}">
            <views:Job/>
        </DataTemplate>
    </Application.Resources>
</Application>
